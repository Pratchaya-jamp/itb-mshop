upstream backend_app {
    server ip24sy4.sit.kmutt.ac.th:8080;
}

server {
    listen 80;
    server_name intproj24sy4.sit.kmutt.ac.th; # เปลี่ยน server_name

    location /sy4/ {
        alias /usr/share/nginx/html/; # ปรับ path หากจำเป็น
        index index.html index.htm;
        try_files $uri $uri/ /sy4/index.html;
    }

    location /sy4/api/ {
        rewrite ^/sy4/api/(.*)$ /sy4/v1/$1 break;
        proxy_pass http://backend_app;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        rewrite ^/$ /sy4/ permanent;
    }
}
